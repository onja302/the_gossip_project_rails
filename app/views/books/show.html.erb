<h1><%= @gossip.author: @gossip.content %></h1>

<form action="/action_page.php">
<%= form_tag "/gossipss/#{@gossips.id}", method: "patch" do %>
  <div class="form-group">
    <label for="email">Gossip:</label>
    <input type="text" class="form-control" name="Entrez le gossip" >
  </div>
  <div class="form-group form-check">
    <label class="form-check-label">
      <input class="form-check-input" type="checkbox"> Remember me
    </label>
  </div>
  <button type="submit" class="btn btn-outline-success">Submit</button>
<% end %>
</form>

<%= form_tag "/gossips/#{@gossips.id}", method: "delete" do %>
  <button type="submit" class="btn btn-outline-success">Supprimer le gossip</button>
<% end %>

<p><a href="/gossips">Retourner à l’index</a></p>


  

  
